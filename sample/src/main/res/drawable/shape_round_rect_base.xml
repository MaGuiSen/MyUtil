<?xml version="1.0" encoding="utf-8"?><!-- 圆角矩形 灰色 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 填充颜色 -->
    <solid android:color="#ffff00"></solid>
    <!-- 线的宽度，颜色-->
    <stroke
        android:width="10dp"
        android:color="#ff0000"></stroke>
    <!-- 矩形的圆角半径 -->
    <!-- 概括所有的:<corners android:radius="5dp" />-->
    <corners android:topLeftRadius="50dp" android:topRightRadius="10dp"
        android:bottomRightRadius="100dp" android:bottomLeftRadius="2dp" />
</shape>