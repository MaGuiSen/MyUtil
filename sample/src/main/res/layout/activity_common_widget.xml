<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#00af00"
                android:gravity="center"
                android:padding="5dp"
                android:text="输入框"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <include layout="@layout/layout_input"></include>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#00af00"
                android:gravity="center"
                android:padding="5dp"
                android:text="消息"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <include layout="@layout/layout_msg_item"></include>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#00af00"
                android:gravity="center"
                android:padding="5dp"
                android:text="联系人条目"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <include layout="@layout/layout_contact_item"></include>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#00af00"
                android:gravity="center"
                android:padding="5dp"
                android:text="设置条目"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <include layout="@layout/layout_setting_item"></include>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#00af00"
                android:gravity="center"
                android:padding="5dp"
                android:text="功能按钮"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <include layout="@layout/layout_txt_bottom_img_up_item"></include>

        </LinearLayout>
    </ScrollView>
</LinearLayout>